            name="DependencyMonitor"
            icon="icons/sample.gif"
            category="org.eclipse.recommenders.models.rcp.dependencymonitor.view"
            class="org.eclipse.recommenders.models.rcp.dependencymonitor.views.DependencyMonitor"
